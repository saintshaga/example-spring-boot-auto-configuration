<config
        xmlns:jsr107='http://www.ehcache.org/v3/jsr107'
        xmlns='http://www.ehcache.org/v3'>
    <service>
        <jsr107:defaults enable-management="true" enable-statistics="true"/>
    </service>
    <!-- file persistance enabling-->
    <persistence directory="./cache"></persistence>
    <!-- the 2 caches we will create-->
    <cache alias="contactUser" uses-template="contact-user-cache"/>
    <!-- the config cache tenplate-->
    <cache-template name="contact-user-cache">
        <key-type>java.lang.String</key-type>
        <value-type>cn.saintshaga.example.entity.User</value-type>
        <expiry>
            <ttl unit="hours">24</ttl>
        </expiry>
        <listeners>
            <listener>
                <!-- the the main cache event listener-->
                <class>cn.saintshaga.example.listener.CacheListener</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>UPDATED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
                <events-to-fire-on>REMOVED</events-to-fire-on>
                <events-to-fire-on>EVICTED</events-to-fire-on>
            </listener>
        </listeners>
        <resources>
            <heap unit="entries">3</heap>
            <disk persistent="true" unit="kB">100</disk>
        </resources>
    </cache-template>
</config>